{
	"expo": {
		"name": "Code Scanner",
		"slug": "code-scanner",
		"version": "1.0.2",
		"orientation": "default",
		"icon": "./assets/images/icon.png",
		"scheme": "codescanner",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true,
			"bundleIdentifier": "com.jmercier.codescanner"
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#1d293d"
			},
			"edgeToEdgeEnabled": true,
			"intentFilters": [
				{
					"action": "VIEW",
					"autoVerify": true,
					"data": [
						{
							"scheme": "https"
						}
					]
				},
				{
					"action": "VIEW",
					"autoVerify": true,
					"data": [
						{
							"scheme": "http"
						}
					]
				},
				{
					"action": "VIEW",
					"autoVerify": true,
					"data": [
						{
							"scheme": "mailto"
						}
					]
				},
				{
					"action": "VIEW",
					"autoVerify": true,
					"data": [
						{
							"scheme": "tel"
						}
					]
				},
				{
					"action": "VIEW",
					"autoVerify": true,
					"data": [
						{
							"scheme": "sms"
						}
					]
				}
			],
			"permissions": [
				"android.permission.CAMERA",
				"android.permission.RECORD_AUDIO"
			],
			"package": "com.jmercier.codescanner"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/splash-icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#1d293d"
				}
			],
			[
				"expo-camera",
				{
					"cameraPermission": "Autoriser $(PRODUCT_NAME) à accéder à votre caméra."
				}
			],
			[
				"expo-media-library",
				{
					"photosPermission": "Autoriser $(PRODUCT_NAME) à accéder à vos photos.",
					"savePhotosPermission": "Autoriser $(PRODUCT_NAME) à enregistrer des photos.",
					"isAccessMediaLocationEnabled": true
				}
			],
			[
				"expo-image-picker",
				{
					"photosPermission": "Autoriser $(PRODUCT_NAME) à accéder à vos photos."
				}
			],
			"expo-localization",
			[
				"react-native-edge-to-edge",
				{
					"android": {
						"parentTheme": "Default",
						"enforceNavigationBarContrast": false
					}
				}
			],
			[
				"expo-contacts",
				{
					"contactsPermission": "Autoriser $(PRODUCT_NAME) à accéder à vos contacts."
				}
			],
			"expo-web-browser",
			[
				"expo-calendar",
				{
					"calendarPermission": "Autoriser $(PRODUCT_NAME) à accéder à vos calendriers."
				}
			],
			[
				"expo-screen-orientation",
				{
					"initialOrientation": "DEFAULT"
				}
			]
		],
		"experiments": {
			"typedRoutes": true,
			"reactCompiler": false
		},
		"extra": {
			"router": {},
			"eas": {
				"projectId": "44d8764c-1348-43ab-9361-42fbf36c9aaf"
			}
		}
	}
}
